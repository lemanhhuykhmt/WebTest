@model WebBanMyPham.DataBase.EF.SanPham

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section jsFooter{
<script>
    $('#btnSelectImage').on('click', function (e) {
        e.preventDefault();
        var finder = new CKFinder();
        finder.selectActionFuntion = function (url) {
            $('#txtImage').val(url);
        };
        finder.popup();
    })
</script>
}

@using (Html.BeginForm("Create", "SanPham", FormMethod.Post)) 
